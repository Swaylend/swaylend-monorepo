{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "include": [
      "**/*.js",
      "**/*.ts",
      "**/*.jsx",
      "**/*.tsx",
      "**/*.cjs",
      "**/*.cts",
      "**/*.mjs",
      "**/*.mts",
      "**/*.json"
    ],
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/coverage/**",
      "**/contract-types/**",
      "**/.next/**",
      "**/files/**",
      "**/out/**",
      "patches/**",
      "assets/**",
      ".nx/**",
      "**/target/**",
      "**/data/**",
      "**/generated/**",
      "**/typechain-types/**",
      "**/cache/**",
      "**/cache_forge/**",
      "**/artifacts/**",
      "**/contracts/lib/**",
      "**/__generated__/**",
      "**/ignition/deployments/**",
      "**/subgraphs/tests/.latest.json",
      "apps/indexer-sentio/src/types/**",
      "apps/indexer-sentio/src/schema/**",
      "apps/indexer-sentio/store.graphql"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noStaticOnlyClass": "off",
        "noForEach": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noImplicitAnyLet": "off",
        "noArrayIndexKey": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      },
      "a11y": {
        "useKeyWithClickEvents": "off",
        "noAutofocus": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "javascript": {
    "formatter": {
      "indentStyle": "space",
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "indentWidth": 2,
      "lineEnding": "lf",
      "semicolons": "always"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2,
      "indentStyle": "space",
      "lineEnding": "lf"
    }
  }
}
